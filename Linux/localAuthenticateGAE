#!/bin/bash
# Run a local version of the UVIS PharmCat web application on
# the local Google App Engine server.

echo "UVISAUTHENTICATELOCALPORT:" $UVISAUTHENTICATELOCALPORT
echo "UVISAUTHENTICATELOCALHOST:" $UVISAUTHENTICATELOCALHOST
echo "UVISAUTHENTICATELOCALSTORAGE:" $UVISAUTHENTICATELOCALSTORAGE
echo "UVISAUTHENTICATEADMINPORT:" $UVISAUTHENTICATEADMINPORT
echo "UVISAUTHENTICATEGAEAPPPATH:" $UVISAUTHENTICATEGAEAPPPATH


python $GOOGLEAPPBIN/dev_appserver.py \
  --port=$UVISAUTHENTICATELOCALPORT  \
  --host=$UVISAUTHENTICATELOCALHOST  \
  --storage_path=$UVISAUTHENTICATELOCALSTORAGE \
  --admin_port=$UVISAUTHENTICATEADMINPORT \
  $UVISAUTHENTICATEGAEAPPPATH
